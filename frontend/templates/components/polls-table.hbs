<div>

  <article class="col-xs-12 col-sm-12">

    <h1 class="bl">{{i18n 'Polls'}}</h1><br>

    <div id="polls-table">

      {{#if polls.length}}
        
        <table id="vmp">

          <thead>

            <tr>

              <th scope="col" id="f1">{{i18n 'Title'}}</th>
              <th scope="col" id="f2">{{i18n 'Actions'}}</th>

            </tr>

          </thead>

          <tbody>

            {{#each polls}}

              <tr fronty-component="PollRowComponent" key="{{id}}" model="polls[{{@index}}]" id="item-{{id}}"></tr>

            {{/each}}

          </tbody>

        </table>

      {{/if}}

    </div>

    {{#if user.isLogged}}

      <button id="add-poll-button" type="submit" class="btn btn-default">{{i18n 'CREATE'}}</button> <br>

    {{/if}}

  </article>

</div>
